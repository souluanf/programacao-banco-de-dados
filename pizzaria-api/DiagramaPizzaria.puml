class ItemPedido {
  - id: Long
  - descricao: String
  - precoUnitario: BigDecimal
  - quantidade: int
}

class Entrega {
  - id: Long
  - dataEntrega: LocalDate
  - horaEntrega: LocalTime
  - tipoPagamento: String
  - codigoDeEntrega: String
